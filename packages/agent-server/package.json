{
  "name": "@thunderdome/agent-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "docker:build": "npm run build && docker build -t thunderdome/agent-server:latest .",
    "docker:run": "docker run -p 3000:3000 thunderdome/agent-server:latest"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.69",
    "@hono/node-server": "^1.13.7",
    "hono": "^4.6.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  }
}
