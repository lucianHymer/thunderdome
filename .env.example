# Database
DATABASE_URL=./thunderdome.db

# GitHub OAuth (for user login - create at github.com/settings/developers)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# GitHub App (for code battles - repo write access)
# Create at github.com/settings/apps/new
# Required permissions: Contents (Read & Write), Metadata (Read)
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY=  # Base64 encoded .pem file: cat private-key.pem | base64 -w0
GITHUB_APP_WEBHOOK_SECRET=  # Optional: for webhook signature verification

# NextAuth.js
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000
AUTH_TRUST_HOST=true  # Required for production behind proxy

# Encryption (for storing sensitive tokens)
ENCRYPTION_KEY=
